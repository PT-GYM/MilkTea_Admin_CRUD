@page
@model MilkTea_Admin_CRUD.Pages.Authen.LoginModel
@{
    ViewData["Title"] = "Welcome";
}

<link href ="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel = "stylesheet">

<div class= "container d-flex justify-content-center align-items-center vh-85" >
    <div class= "card shadow-lg p-4" style = "max-width: 400px; width: 100%;" >
        <h2 class= "text-center text-primary" > @ViewData["Title"] </h2>

            @if (!string.IsNullOrEmpty(Model.ErrorMessages))
            {
                <p class= "text-danger fw-bold text-center"> @Model.ErrorMessages </p>
            }

        <form method = "post" >
            <div class= "mb-3" >
                <label asp-for= "Username" class= "form-label fw-semibold"> User name </label>
                <input asp-for="Username" class="form-control" required />
            </div >

            <div class= "mb-3" >
                <label asp-for="Password" class= "form-label fw-semibold" > Password </label>
                <input asp-for="Password" type = "password" class= "form-control" required/>
            </div >

            <button type = "submit" class= "btn btn-primary w-100" > Login </button>
        </form>
    </div>
</div>
