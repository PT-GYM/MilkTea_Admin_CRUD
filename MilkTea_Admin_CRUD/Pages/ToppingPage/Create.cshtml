@page
@model MilkTea_Admin_CRUD.Pages.ToppingPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="topping.Name" class="form-label">Product Name</label>
        <input asp-for="topping.Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="topping.Price" class="form-label">Price</label>
        <input asp-for="topping.Price" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="topping.Stock" class="form-label">Stock</label>
        <input asp-for="topping.Stock" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Product Image</label>
        <input type="file" asp-for="ToppingImage" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

