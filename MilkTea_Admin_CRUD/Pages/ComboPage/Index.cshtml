@page
@model MilkTea_Admin_CRUD.Pages.ComboPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
    <a asp-page="/ProductPage/Show" class="btn btn-secondary">Back To Products</a>
</p>
<h1>Combo Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Combo ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Products</th>
            <th>Toppings</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var combo in Model.Combos)
        {
            <tr>
                <td>@combo.ComboId</td>
                <td>@combo.Name</td>
                <td>@combo.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                <td>
                    @if (!string.IsNullOrEmpty(combo.ImageUrl))
                    {
                        <img src="@combo.ImageUrl" alt="@combo.Name" style="width: 50px;" />
                    }
                </td>
                <td>
                    <ul style="list-style-type: none;">
                        @foreach (var product in combo.Products)
                        {
                            <li>@product.Name - @product.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul style="list-style-type: none;">
                        @foreach (var topping in combo.Toppings)
                        {
                            <li>@topping.Name - @topping.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</li>
                        }
                    </ul>
                </td>

                <td>
                    <a asp-page="Edit" asp-route-id="@combo.ComboId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="Delete" asp-route-id="@combo.ComboId" class="btn btn-sm btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="post" asp-page-handler="Logout">
    <button type="submit" class="btn btn-danger"> Logout </button>
</form>
<!-- Phân trang -->
<div class="pagination" style="margin-top: 20px">
    @if (Model.CurrentPage > 1)
    {
        <a asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" class="btn btn-outline-primary">Previous</a>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a asp-page="Index" asp-route-pageNumber="@i" class="btn @(Model.CurrentPage == i ? "btn-primary" : "btn-outline-primary")">@i</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-page="Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" class="btn btn-outline-primary">Next</a>
    }
</div>