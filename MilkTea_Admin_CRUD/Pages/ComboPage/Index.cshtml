@model MilkTea_Admin_CRUD.Pages.ComboPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Combo</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
    <a asp-page="/ProductPage/Show" class="btn btn-secondary">Back To Products</a>
</p>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].Product1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].Product2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].Topping1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Combo[0].Topping2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Combo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product1.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product2.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping1.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping2.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ComboId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ComboId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ComboId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
