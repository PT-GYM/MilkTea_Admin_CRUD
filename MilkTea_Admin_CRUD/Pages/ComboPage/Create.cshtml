@page
@model MilkTea_Admin_CRUD.Pages.ComboPage.CreateModel

@{
    ViewData["Title"] = "Create Combo";
}

<link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet"/>
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>


<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Combo.Name" class="form-label">Combo Name</label>
        <input asp-for="Combo.Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Combo.Price" class="form-label">Price</label>
        <input asp-for="Combo.Price" type="number" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Combo Image</label>
        <input type="file" asp-for="ComboImage" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Select Products</label>
        <select asp-for="SelectedProductId" class="form-control select2" multiple>
            @foreach (var product in Model.Products)
            {
                <option value="@product.ProductId">@($"{product.Name} - {product.Price:C}")</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Select Toppings</label>
        <select asp-for="SelectedToppingId" class="form-control select2" multiple>
            @foreach (var topping in Model.Toppings)
            {
                <option value="@topping.ToppingId">@($"{topping.Name} - {topping.Price:C}")</option>
            }
        </select>
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2();
        });
    </script>
}