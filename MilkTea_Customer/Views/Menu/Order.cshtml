@model IEnumerable<BussinessObject.Order>

<h2>Order History</h2>

@if (!Model.Any())
{
    <p>Bạn chưa có đơn hàng nào.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("OrderDetail", "Menu", new { orderId = order.OrderId })">
                            @order.OrderId
                        </a>
                    </td>
                    <td>@order.OrderDate</td>
                    <td>@order.TotalAmount.ToString("N0", new System.Globalization.CultureInfo("vi-VN")) VND</td>
                    <td>@order.Status</td>
                    <td>
                        <a href="@Url.Action("OrderDetail", "Menu", new { orderId = order.OrderId })" class="btn btn-info">
                            Xem chi tiết
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

